<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/iv_triangle_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@null"
        android:src="@drawable/layerlist_triangle_up"
        android:visibility="gone"
        tools:visibility="visible" />

    <LinearLayout
        android:layout_width="144dp"
        android:layout_height="60dp"
        android:background="@drawable/shape_solid_b3000000_corner_16"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        tools:ignore="HardcodedText,SpUsage,UselessParent">


        <TextView
            android:id="@+id/tv_copy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:text="copy"
            android:textColor="@color/white"
            android:textSize="14dp"
            app:drawableTopCompat="@drawable/ic_copy" />

        <TextView
            android:id="@+id/tv_forward"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:text="Forward"
            android:textColor="@color/white"
            android:textSize="14dp"
            app:drawableTopCompat="@drawable/ic_forward" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_triangle_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@null"
        android:src="@drawable/layerlist_triangle_down"
        android:visibility="gone"
        tools:visibility="visible" />
</LinearLayout>