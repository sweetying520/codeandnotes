<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="20dp"
            android:contentDescription="@null"
            tools:ignore="UsingOnClickInXml" />


        <Button
            android:id="@+id/btnInSampleSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="图片采样压缩"
            android:textAllCaps="false"
            tools:ignore="HardcodedText,UsingOnClickInXml" />

        <Button
            android:id="@+id/btnLruCache"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="LruCache 实现照片墙"
            android:textAllCaps="false"
            tools:ignore="HardcodedText,UsingOnClickInXml" />

        <Button
            android:id="@+id/btnDiskLruCacheSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="DiskLruCache Save"
            android:textAllCaps="false"
            tools:ignore="HardcodedText,UsingOnClickInXml" />

        <Button
            android:id="@+id/btnDiskLruCacheGet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="DiskLruCache Get"
            android:textAllCaps="false"
            tools:ignore="HardcodedText,UsingOnClickInXml" />

        <Button
            android:id="@+id/btnDiskLruCacheRemove"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="DiskLruCache Remove"
            android:textAllCaps="false"
            tools:ignore="HardcodedText,UsingOnClickInXml" />

    </LinearLayout>

</ScrollView>